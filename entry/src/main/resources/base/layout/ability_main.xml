<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:margin="15vp"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:btn_view_group"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text="ViewGroup Implementation"
            ohos:background_element="$graphic:flex_item_background"
            ohos:padding="10vp"
            ohos:text_size="16fp"
            ohos:text_alignment="center"/>

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="15vp"
            ohos:total_weight="5"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:flex_direction_label"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="3"
                ohos:text="Label"
                ohos:text_size="16fp"
                ohos:text_alignment="left"/>

            <Text
                ohos:id="$+id:flex_direction_value"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="2"
                ohos:text="Value"
                ohos:text_size="14fp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="15vp"
            ohos:total_weight="5"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:flex_wrap_label"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="3"
                ohos:text="Label"
                ohos:text_size="16fp"
                ohos:text_alignment="left"/>

            <Text
                ohos:id="$+id:flex_wrap_value"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="2"
                ohos:text="Value"
                ohos:text_size="14fp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="15vp"
            ohos:total_weight="5"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:justify_content_label"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="3"
                ohos:text="Label"
                ohos:text_size="16fp"
                ohos:text_alignment="left"/>

            <Text
                ohos:id="$+id:justify_content_value"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="2"
                ohos:text="Value"
                ohos:text_size="14fp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="15vp"
            ohos:total_weight="5"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:align_items_label"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="3"
                ohos:text="Label"
                ohos:text_size="16fp"
                ohos:text_alignment="left"/>

            <Text
                ohos:id="$+id:align_items_value"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="2"
                ohos:text="Value"
                ohos:text_size="14fp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="15vp"
            ohos:total_weight="5"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:align_content_label"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="3"
                ohos:text="Label"
                ohos:text_size="16fp"
                ohos:text_alignment="left"/>

            <Text
                ohos:id="$+id:align_content_value"
                ohos:width="0vp"
                ohos:height="match_content"
                ohos:weight="2"
                ohos:text="Value"
                ohos:text_size="14fp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>

        <Text
            ohos:id="$+id:btn_settings"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text="Settings"
            ohos:background_element="$graphic:flex_item_background"
            ohos:top_margin="15vp"
            ohos:padding="10vp"
            ohos:text_size="16fp"
            ohos:text_alignment="center"/>
    </DirectionalLayout>
</ScrollView>
